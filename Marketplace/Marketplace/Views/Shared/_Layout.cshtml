<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @RenderSection("Styles", false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="height:110px;">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("ListOfProduct", "Product")">
                    <img src="~/Resources/Logo.jpg" alt="Logo" style="width:100px;">
                </a>
            </div>
            
                <ul class="nav navbar-nav">

                    <li>
                            @using (Html.BeginForm("ListOfProduct", "Product"))
                            {
                            <form>
                                <div class="input-group">
                                    @Html.TextBox("searchText", ViewBag.SearchText as string, new { @class="form-control", placeholder = "Author or title of book" })
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit">
                                            <i class="glyphicon glyphicon-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                            }

                        <span>
                            <a href="@Url.Action("ListOfProduct", "Product")">Просмотр книг</a>
                            <a href="@Url.Action("ListOfProduct", "Product")">Личный профиль</a>
                            <a href="@Url.Action("ListOfUsers", "Admin")">Просмотр списка пользователя</a>
                        </span>
                    </li>
                    
                    <li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Logoff", "User")"><span class="glyphicon glyphicon-user"></span> Sign out</a>
                        }
                        else 
                        {
                    <a href="@Url.Action("Login", "User")"><span class="glyphicon glyphicon-user"></span> Sign in</a>
                        }
                    </li>
                    <li>
                        <a class="navbar-brand" href="@Url.Action("CartShow", "Cart")">
                            <img src="~/Resources/CartIcon.png" alt="Logo" style="width:50px;height:50px;">
                        </a>
                    </li>
                </ul>
            </div>
    </div>
    <div class="container body-content" style="top: 200px;">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
